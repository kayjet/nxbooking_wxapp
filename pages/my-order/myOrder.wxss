/**index.wxss**/
.bg{
  width: 100%;
  height: 100%;
  opacity: 0.8;
  position: fixed;
  top: 0;
  left: 0;
}
.content{
  position: fixed;
  top: 120rpx;
  bottom: 160rpx;
  left: 40rpx;
  right: 40rpx;
  background: #fff;
  border-radius: 40rpx;
}
swiper{
   height: 100%;
  width: 100%;
}
swiper-item{
  height: 100%;
  width: 100%;
  font-size: 16px;
}

.line{
  border-bottom: 1px solid #eee;
  padding: 20rpx;
  font-size: 14px;
  position: relative;
}
.line:first-child{
  margin-top: 20rpx;
}
.line:last-child{
  margin-bottom: 20rpx;
}
.title{
  text-align: center;
  font-weight: bold;
  font-size: 16px;
}
.line .left{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.line .right{
  position: absolute;
  right: 20rpx;
  top: 0;
  height: 100%;
  line-height: 122rpx;
  text-align: right;
  color: #ccc;
}
.line .t1{
  font-size: 14px;
  color: #9fc03a;
}
.line .t2{
  font-size: 12px;
  font-weight: normal;
}
.line .t3{
  border-right: 1px solid #ccc;
  margin-left: 12rpx;
  margin-right: 12rpx;
}
.line .t5{
  color: #333;
  margin: 80rpx;
}
.line .t6{
  color: #333;
}