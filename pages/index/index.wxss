/**index.wxss**/
.container{
  background: #fff;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
.bottom-page{
  padding: 40rpx;
}
.my-order{
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee; 
  height: 120rpx;
  font-size: 14px;
  line-height: 120rpx;
}
.my-order .left{
  float: left;
  height: 100%;
  padding-left: 40rpx;
}
.my-order .right{
  float: right;
  height: 100%; 
  color: #c1c1c1;
  padding-right: 40rpx;
}
.slide-image{
  width: 100%;
  height: 100%;
}